{
  "name": "camp-css",
  "version": "0.1.0",
  "description": "CSS behind the distinctive style of ActiveCampaign",
  "main": "dist/main.min.css",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run lint",
    "build": "node-sass src --output dist --source-map true",
    "postbuild": "npm run post && npm run compress",
    "lint": "stylelint src",
    "post": "postcss dist/main.css --replace",
    "compress": "node-sass --output-style compressed dist/main.css > dist/main.min.css",
    "start": "npm run clean && watch 'npm run build' src",
    "dev": "npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/activecampaign/camp-css.git"
  },
  "keywords": [
    "css",
    "scss",
    "activecampaign"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/activecampaign/camp-css/issues"
  },
  "homepage": "https://github.com/activecampaign/camp-css#readme",
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "css-mqpacker": "^7.0.0",
    "node-sass": "^4.9.2",
    "postcss-cli": "^5.0.1",
    "postcss-discard-comments": "^4.0.0",
    "postcss-syntax": "^0.31.0",
    "rimraf": "^2.6.2",
    "stylelint": "^9.3.0",
    "stylelint-config-activecampaign": "github:rod/stylelint-config-activecampaign",
    "watch": "^1.0.2"
  }
}
