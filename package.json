{
  "name": "camp-css",
  "version": "0.0.0",
  "description": "CSS for ActiveCampaign",
  "main": "dist/main.css",
  "scripts": {
    "clean": "rimraf dist",
    "build": "node-sass src/main.scss --source-map true --output-style compressed -o dist | postcss dist/main.css -d dist",
    "dev": "node-sass src/main.scss --source-map true --output-style compressed -o dist -w | postcss dist/main.css -d dist -w",
    "start": "yarn dev",
    "lint": "stylelint \"src/**/*.scss\" --syntax scss",
    "pretest": "yarn clean && yarn build",
    "test": "yarn lint && node test.js",
    "prepublish": "yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rod/camp-css.git"
  },
  "keywords": [
    "css",
    "scss"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rod/camp-css/issues"
  },
  "homepage": "https://github.com/rod/camp-css#readme",
  "devDependencies": {
    "autoprefixer": "^8.6.4",
    "node-sass": "^4.9.0",
    "postcss-cli": "^5.0.1",
    "postcss-syntax": "^0.30.0",
    "rimraf": "^2.6.2",
    "sourcemap-validator": "^1.1.0",
    "stylelint": "^9.3.0",
    "stylelint-config-activecampaign": "github:rod/stylelint-config-activecampaign"
  }
}
